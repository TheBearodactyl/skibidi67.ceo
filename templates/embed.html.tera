  <meta property="og:description" content="uploaded by {{ video.uploaded_by_name }} on skibidi67.ceo">
  <meta property="og:type" content="video.other">
  <meta property="og:url" content="https://skibidi67.ceo/ui/videos/{{ video.id }}">

